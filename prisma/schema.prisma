generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id @default(uuid())
  title     String
  body      String?
  icon      String
  status    Status   @default(inProgress)
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

enum Status {
  inProgress
  complete
  cancel
}
